{# CUA Banner #}

{# Attach the library #}
{{ attach_library('cua_theme/banner') }}

{# Set CSS Classes #}
{% set container_classes = [
    'block',
    'block-' ~ configuration.provider|clean_class,
    'block-' ~ plugin_id|clean_class,
    'jumbotron jumbotron-fluid banner g-0',
    color_background is not empty ? color_background ~ ' ' ~ color_border|clean_class : '',
    container_size is not empty ? container_size|clean_class  : '',
    id ? 'block--' ~ id|replace({"_": "-"})|clean_class,]|merge(utility_classes ? utility_classes : [])
%}

{# Add unique id to block #}
{% set unique_id = [
    plugin_id ? 'block--' ~ plugin_id|replace({"_": "-", ":": "--"}) ~ '-' ~ elements.content['#block_content'].id()
] %}

{# Content #}
<div{{ attributes|without('id').addClass(container_classes, background_class ).setAttribute('id', unique_id ) }}>
    <div class="{{ parallax }} ken kenburns-{{ effect }} py-5 px-5" {% if content.field_image['#items'].entity.uri.value %} style="background-image: url({{ file_url(content.field_image['#items'].entity.uri.value) }}); background-size: cover; background-position: center"{% endif %} >
        <div class="d-flex {{ content.field_position_container.0 }}">
            {% set center = (content.field_center_content.0) %}
            {% set color_text = (content.field_text_color.0) %}
            <div class="col-md-5 col-sm-12 {{ content.field_color_background.0 }} banner-body kenburns-{{ effect_copy }} py-md-4 mx-md-5 m-sm-0 p-sm-0 pt-sm-5">
                {% if label is not empty %}
                    {{ title_prefix }}
                    {% if label %}
                        <h2 class="display-4 d-flex {{ center }} {{ color_text }}">{{ label }}</h2>
                    {% endif %}
                {% endif %}
                {{ title_suffix }}
                {% if content.body is not empty %}
                    <div class="lead d-flex {{ center }} {{ color_text }}">{{ content.body }}</div>
                {% endif %}
                {% if content.field_link[0]['#url'] is not empty %}
                    <div class="d-flex {{ center }} my-2">
                        <a href="{{ content.field_link[0]['#url'] }}"
                           class="btn {{ content.field_outline.0 }}btn-{{ content.field_button_color.0 }}">
                            {{ content.field_link[0]['#title'] }}
                        </a>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
</div>

