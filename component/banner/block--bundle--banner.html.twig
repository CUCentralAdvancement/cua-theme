* Full List Utility Classes
* https://github.com/twbs/bootstrap/blob/v5.3.0/dist/css/bootstrap.css#L5360
*
* Available fields located in:
* - cua_theme.theme
*/
#}

{# Attach the library #}
{{ attach_library('cua_theme/banner') }}

{# If class is active #}
{% set background_color = color_background is not empty ? color_background|clean_class : '' %}
{% set size = container_size is not empty ? container_size|clean_class : '' %}
{% set parallax_on = parallax is not empty ? parallax|clean_class : '' %}
{% set margins_on = margins is not empty ? margins|clean_class : '' %}

{# Set CSS Classes #}
{% set container_classes = [
    'block',
    'block-' ~ configuration.provider|clean_class,
    'block-' ~ plugin_id|clean_class,
    'jumbotron jumbotron-fluid banner g-0',
    parallax_on,
    margins_on,
    background_color,
    size,
    id ? 'block--' ~ id|replace({"_": "-"})|clean_class,]|merge(utility_classes ? utility_classes : []) %}

{# Initialize effect classes #}
{% set effect_classes = [] %}

{# Add optional classes based on conditions #}
{% if effect %}
    {% set effect_classes = effect_classes | merge(['ken', 'kenburns-' ~ effect]) %}
{% endif %}

{# Initialize animation classes #}
{% set animation_classes = [] %}

{# Add optional classes based on conditions #}
{% if animation or animation_speed or animation_delay %}
    {% set animation_classes = animation_classes | merge(['animate-trigger']) %}
{% endif %}

{# Add unique id to block #}
{% set unique_id = [
    plugin_id ? 'block--' ~ plugin_id|replace({"_": "-", ":": "--"}) ~ '-' ~ elements.content['#block_content'].id()
] %}

{# Content #}
<div{{ attributes|without('id').addClass(container_classes).setAttribute('id', unique_id) }}{% if effect_classes|length %} class="{{ effect_classes|join(' ') }}"{% endif %}{% if content.field_image['#items'].entity.uri.value %} style="background-image: url({{ file_url(content.field_image['#items'].entity.uri.value) }}); background-size: cover; background-position: center"{% endif %}>
    <div{{ attributes.addClass(animation_classes).setAttribute('id', unique_id ) }}{% if animation or animation_speed or animation_delay %} data-animation-classes="animate__animated {{ animation ~ ' ' ~ animation_speed ~ ' ' ~ animation_delay }}"{% endif %}>
        <div class="{% if position_container is not empty %}{{ 'd-flex' ~ ' ' ~ position_container|clean_class }}{% endif %} py-5">
            <div class="col-md-5 col-sm-12 {{ color_background ~ ' ' ~ text_color }} banner-body {% if effect_copy is not empty %}{{ 'kenburns-'|t ~ '' ~ effect_copy|clean_class }}{% endif %} py-md-4 mx-md-5 m-sm-0 p-sm-0 pt-sm-5">
                {# Include Title Component #}
                {% include '@cua_theme/component/title/_title.html.twig' %}
                {# Include Body Component #}
                {% include '@cua_theme/component/body/_body.html.twig' %}
                {# Include Link/Button Component #}
                {% include '@cua_theme/component/card/_card--footer-btn.html.twig' %}
            </div>
        </div>
    </div>
</div>
