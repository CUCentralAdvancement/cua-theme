{#
Counter Component Template
--------------------------
- Renders a visual card with a numeric counter, optional icon/image, title, body, and links.
- Implements WCAG/Section 508 accessibility best practices.
- Dynamically generates semantic IDs for ARIA labeling.
- Utilizes Bootstrap 5 utility classes.
- Uses macros for modular, reusable structure.
#}

{# Attach required styles and JS behavior for the counter #}
{{ attach_library('cua_theme/counter') }}

{# Import reusable rendering macros #}
{% import '@cua_theme/component/macros/card_title.html.twig' as titleMacros %}
{% import '@cua_theme/component/macros/card_counter.html.twig' as counterMacros %}

{# Build base classes dynamically with fallbacks and optional utility extensions #}
{% set counter_classes = [
    'block',
    'block-' ~ configuration.provider|clean_class,
    'counter',
    'card', 'rounded-0', 'mx-2', 'p-3',
    color_background ?: null,
    color_border ?: null,
    container_size ?: null,
    id ? 'block--' ~ id|replace({'_': '-'})|clean_class : null
] | merge(utility_classes|default([])) | filter(v => v) | join(' ') %}

{# Generate unique ID for region and title #}
{% set unique_id = 'block--node--counter--' ~ elements.content['#block_content'].id()|replace({"_": "-", ":": "--"}) %}
{% set title_id = unique_id ~ '-title' %}

<div{{ attributes|without('id').setAttribute('id', unique_id).addClass(counter_classes).setAttribute('role', 'region').setAttribute('aria-labelledby', title_id) }}>

    {# Render the title with ID #}
    {{ titleMacros.render_title(
        label,
        title_prefix,
        title_suffix,
        center_content,
        text_alignment,
        text_color,
        padding,
        links,
        title_id
    ) }}

    {# Conditionally render an image or icon (mutually exclusive) #}
    {% if card_image %}
        {% import '@cua_theme/component/macros/card_image.html.twig' as cardImageMacros %}
        {{ cardImageMacros.render_card_image(
            card_image,
            position_container,
            text_alignment,
            text_color,
            image_size,
            visibility,
            content,
            links
        ) }}
    {% elseif icon %}
        {% import '@cua_theme/component/macros/card_icon.html.twig' as iconMacros %}
        {{ iconMacros.render_icon(
            icon,
            icon_size,
            icon_color,
            padding,
            position_container,
            text_alignment,
            'Counter visual icon'
        ) }}
    {% endif %}

    {# Render the animated counter number (with appropriate ARIA support handled inside the macro) #}
    {{ counterMacros.render_counter(
        number,
        text_alignment,
        text_color,
        before_number,
        after_number
    ) }}

    {% if content %}
        {% import '@cua_theme/component/macros/card_body.html.twig' as bodyMacros %}
        {{ bodyMacros.render_body(
            content,
            padding,
            text_color,
            text_alignment
        ) }}
    {% endif %}

    {% if links %}
        {% import '@cua_theme/component/macros/card_footer.html.twig' as cardFooterMacros %}
        {{ cardFooterMacros.render_card_footer(
            links,
            container_size,
            color_background,
            position_container,
            text_alignment,
            padding,
            outline,
            button_color,
            button_layout
        ) }}
    {% endif %}

</div>