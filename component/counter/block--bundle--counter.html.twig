{# Import macros #}
{% import '@cua_theme/component/macros/card_image.html.twig' as cardImageMacros %}
{% import '@cua_theme/component/macros/card_icon.html.twig' as iconMacros %}
{% import '@cua_theme/component/macros/card_title.html.twig' as titleMacros %}
{% import '@cua_theme/component/macros/card_counter.html.twig' as counterMacros %}
{% import '@cua_theme/component/macros/card_body.html.twig' as bodyMacros %}
{% import '@cua_theme/component/macros/card_footer.html.twig' as cardFooterMacros %}

{# Attach the library #}
{{ attach_library('cua_theme/counter') }}

{# Define classes #}
{% set counter_classes = [
    'block',
    'block-' ~ configuration.provider|clean_class,
    'counter',
    'card rounded-0 mx-2 p-3',
    color_background ?: null,
    color_border ?: null,
    container_size ?: null,
    id ? 'block--' ~ id|replace({"_": "-"})|clean_class : null,
] | merge(utility_classes ? utility_classes : []) | filter(v => v) | join(' ') %}

{# Generate unique ID #}
{% set unique_id = 'block--node--counter--' ~ elements.content['#block_content'].id()|replace({"_": "-", ":": "--"}) %}

{# Render content #}
<div{{ attributes|without('id').setAttribute('id', unique_id).addClass(counter_classes) }}>

    {# Render the title #}
    {{ titleMacros.render_title(
        label,
        title_prefix,
        title_suffix,
        center_content,
        text_alignment,
        text_color,
        padding,
        links
    ) }}

    {# Include image or icon macros #}
    {% if card_image %}
        {# Render the image #}
        {{ cardImageMacros.render_card_image(
            card_image,
            position_container,
            text_alignment,
            text_color,
            image_size,
            visibility,
            content,
            links
        ) }}
    {% elseif icon %}
        {# Render the icon #}
        {{ iconMacros.render_icon(
            icon,
            icon_size,
            icon_color,
            padding,
            position_container,
            text_alignment
        ) }}
    {% endif %}

    {# Render the counter #}
    {{ counterMacros.render_counter(
        number,
        text_alignment,
        text_color,
        before_number,
        after_number)
    }}

    {# Render the body #}
    {{ bodyMacros.render_body(
        content,
        padding,
        text_color,
        text_alignment
    ) }}

    {# Render the footer #}
    {{ cardFooterMacros.render_card_footer(
        links,
        container_size,
        color_background,
        position_container,
        text_alignment,
        padding,
        outline,
        button_color
    ) }}

</div>