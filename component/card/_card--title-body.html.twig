{# Card title and body #}

{# If label or body is active, render #}
{% if label is not empty or body is not empty %}

    {# Concatenate optional classes with a space #}
    {% set card_classes = [
        'd-flex flex-column',
        color_background ? 'text-' ~ color_background : null,
        text_alignment ? text_alignment : null,
        position_container ? 'd-flex ' ~ position_container : null,
        padding ? padding : null,
        'my-2',
    ] | filter(v => v) | join(' ') %}

    {# Content #}
    <div class="{{ card_classes }}">

        {# Include Title Component #}
        {% include '@cua_theme/component/partials/_title.html.twig' %}

        {# Include Body Component #}
        {% include '@cua_theme/component/partials/_body.html.twig' %}

    </div>

{% endif %}