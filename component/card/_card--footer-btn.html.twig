{# If link btn is present, render the following HTML block #}
{% if link_title is not empty %}
    <div class="card-footer {{ center_content ~ ' ' ~ text_alignment ~ ' ' ~ padding }} mb-5">
        <a href="{{ link_url }}" title="
            {% if label is not empty and (link_title == 'Learn More' or link_title == 'Read More') %}
                {{ link_title|title ~ ' ' ~ ' About' ~ ' ' ~ label|title }}
            {% else %}
                {{ link_title }}
            {% endif %}" aria-label="{% if label is not empty and (link_title == 'Learn More' or link_title == 'Read More') %}
                {{ link_title|title ~ ' ' ~ ' About' ~ ' ' ~ label|title }}
            {% else %}
                {{ link_title }}
            {% endif %}" class="align-self-end card-link btn {{ outline }}btn-{{ button_color }} text-decoration-none p-2">

            {# Link #}
            {% if label is not empty and (link_title == 'Learn More' or link_title == 'Read More') %}
                {{ link_title|title ~ ' ' ~ ' About' ~ ' ' ~ label|title }}
            {% else %}
                {{ link_title }}
            {% endif %}

        </a>
    </div>
{% endif %}