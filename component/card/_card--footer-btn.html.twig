{# Card Footer Button #}
{% if link_title is not empty %}

    {# Add optional classes based on conditions #}
    {% set color_background = color_background ?? '' %}
    {% set color_border = color_border ?? '' %}
    {% set container_size = container_size ?? '' %}
    {% set position_container = position_container ?? '' %}
    {% set text_alignment = text_alignment ?? ' ' %}
    {% set text_color = text_color ?? '' %}

    {# Set card footer classes #}
    {% set card_footer_classes = [
        'card-footer d-flex',
        'mb-5',
        container_size,
        color_background,
        position_container,
        text_alignment,
    ] | join(' ')|trim %}

    {# Set card footer link classes #}
    {% set card_footer_link_classes = [
        'align-self-end',
        'card-link',
        'btn',
        (outline is not empty) ? (outline ~ 'btn-' ~ button_color) : null,
        (outline is empty) ? ('btn-' ~ button_color) : null,
        'text-decoration-none',
        'p-2 mt-3'
    ] | join(' ')|trim %}

    {# Add optional variables based on conditions #}
    {#  {% set aria_label = link_title is not empty ? (label is not empty and link_title in ['Learn More', 'Read More', 'More Information'] ? link_title|title ~ ' About ' ~ label|title : link_title) : '' %}
    #}
    <div class="{{ card_footer_classes }}">
        <a href="{{ link_url }}" title="{{ link_title }}"
           aria-label="{{ link_title }}"
           class="{{ card_footer_link_classes }}">
            {{ link_title }}
        </a>
    </div>

{% endif %}

