{# Icon #}

{# If icon is active, render #}
{% if icon %}

    {# Concatenate optional classes with a space #}
    {% set icon_classes = [
        padding ? padding : null,
        position_container ? 'd-flex ' ~ position_container : null,
        text_alignment ? text_alignment : null,
        'pt-5 pb-3',
    ] | filter(v => v) | join(' ') %}

    {# Content #}
    <div class="{{ icon_classes }}" style="color: {{ icon_color }}">
        <i class="{{ icon ~ ' ' ~ icon_size }}"></i>
    </div>

{% endif %}