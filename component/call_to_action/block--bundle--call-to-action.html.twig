* https://github.com/twbs/bootstrap/blob/v5.3.0/dist/css/bootstrap.css#L5360
*
* Available fields located in:
* - cua_theme.theme
*/
#}

{# Add optional classes based on conditions #}
{% set color_background = color_background is not empty ? color_background|clean_class : '' %}
{% set color_border = color_border is not empty ? color_border|clean_class : '' %}
{% set container_size = container_size is not empty ? container_size|clean_class : '' %}
{% set margins = margins is not empty ? margins|clean_class : '' %}

{# Add Classes #}
{% set cta_classes = [
    'block',
    'block-' ~ configuration.provider|clean_class,
    'call-to-action',
    'card rounded-0 h-100 mx-3',
    color_background,
    color_border,
    container_size,
    margins,
    id ? 'block--' ~ id|replace({"_": "-"})|clean_class
] | merge(utility_classes ? utility_classes : []) | join(' ') %}

{# Add unique id to block #}
{% set unique_id = [
    plugin_id ? 'block--' ~ plugin_id|replace({"_": "-", ":": "--"}) ~ '-' ~ elements.content['#block_content'].id()
] %}

{# Initialize animation classes #}
{% set animate_classes = [] %}

{# Add animate-trigger class based on conditions #}
{% if animation or animation_speed or animation_delay %}
    {% set animate_classes = ['animate-trigger'] %}
{% endif %}

{# Content #}
<div{{ attributes|without('id').setAttribute('id', unique_id ).addClass(cta_classes|trim, animate_classes) }}
        {# If Animation #}
        {% if animation or animation_speed or animation_delay %}
    data-animation-classes="{{ 'animate__animated' ~ ' ' ~ animation ~ ' ' ~ animation_speed ~ ' ' ~ animation_delay }}"
        {% endif %}>
    {# Media Component Logic #}
    {% if provider is not empty %}
        {# Include Video Component  #}
        {% include '@cua_theme/component/video/include/_video--master.html.twig' %}
    {% elseif card_image is not empty %}
        {# Include Image Component #}
        {% include '@cua_theme/component/card/_card--image.html.twig' %}
    {% elseif icon is not empty %}
        {# Include Icon Component #}
        {% include '@cua_theme/component/card/_card--icon.html.twig' %}
    {% endif %}
    {# Include Title/Body Component #}
    {% include '@cua_theme/component/card/_card--title-body.html.twig' %}
    {# Include Link/Button Component #}
    {% include '@cua_theme/component/card/_card--footer-btn.html.twig' %}
</div>
