{# ## Alert Card ## #}

{# Attach library #}
{{ attach_library('cua_theme/alert') }}

{# Block boilerplate #}
{% set classes = [
    'block',
    'block-' ~ configuration.provider|clean_class,
    'alert alert-dismissible card h-100 m-0',
    id ? 'block--' ~ id|replace({"_": "-"})|clean_class,]|merge(utility_classes ? utility_classes : []) %}

{# Combine fields and merge with attributes #}
{% set style = color_background ~ ' ' ~ color_border %}

{# Add unique id to block #}
{% set unique_id = [
    plugin_id ? 'block--' ~ plugin_id|replace({"_": "-", ":": "--"}) ~ '-' ~ elements.content['#block_content'].id()
] %}

{# Render block content #}
<div{{ attributes|without('id').addClass(classes, style).setAttribute('id', unique_id ) }}>
    <div class="container">
        <div class="row">
            {# Button to close alert #}
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            {# Icon/Image column #}
            <div class="col-sm-1 g-0 mt-4">
                {# Include Icon/Image Component #}
                {% include '@cua_theme/component/card/_card--image.html.twig' %}
            </div>
            {# Title/Body column #}
            <div class="col-sm-11">
                {# Include Title/Body Component #}
                {% include '@cua_theme/component/card/_card--title-body.html.twig' %}
                {# Include Link Component #}
                {% include '@cua_theme/component/card/_card--footer-btn.html.twig' %}
            </div>
        </div>
    </div>
</div>
