{# Attach the library #}
{{ attach_library('cua_theme/alert') }}

{# Import all macro files at the top #}
{% import '@cua_theme/component/macros/title_macros.html.twig' as titleMacros %}
{% import '@cua_theme/component/macros/body_macros.html.twig' as bodyMacros %}
{% import '@cua_theme/component/macros/card_footer_macros.html.twig' as cardFooterMacros %}

{# Define alert classes #}
{% set alert_classes = [
    'block',
    'block-' ~ configuration.provider|clean_class,
    'alert alert-dismissible card rounded-0 h-100',
    color_background ?: null,
    color_border ?: null,
    container_size ?: null,
    id ? 'block--' ~ id|replace({"_": "-"})|clean_class : null
] | merge(utility_classes ?: []) | filter(v => v) | join(' ') %}

{# Generate unique ID #}
{% set unique_id = 'block--node-alert--' ~ elements.content['#block_content'].id()|replace({"_": "-", ":": "--"}) %}

{# Render content #}
<div{{ attributes|without('id').setAttribute('id', unique_id).addClass(alert_classes) }}>
    <div class="container">
        <div class="row">

            {# Close Button #}
            <button type="button" class="btn-close" aria-label="Close"
                    data-bs-dismiss="alert"></button>

            {# Icon #}
            {% if icon %}
                <div class="col-sm-1 icon-container">
                    <div class="{{ icon ? 'd-md-flex justify-content-md-end justify-content-sm-start pt-4' : '' }}">
                        <i class="{{ icon ?: '' }}{{ icon_size ? ' ' ~ icon_size : '' }}"
                           style="{{ icon_color ? 'color:' ~ icon_color : '' }}"></i>
                    </div>
                </div>
            {% endif %}

            {# Content Area #}
            <div class="col-sm-{{ content.field_icon is not empty ? '11' : '12' }} p-3">

                {# Render the title #}
                {{ titleMacros.render_title(
                    label,
                    title_prefix,
                    title_suffix,
                    center_content,
                    text_alignment,
                    text_color,
                    padding,
                    links
                ) }}

                {# Render the body #}
                {{ bodyMacros.render_body(
                    content,
                    padding,
                    text_color,
                    text_alignment
                ) }}

                {# Render the footer #}
                {{ cardFooterMacros.render_card_footer(
                    links,
                    container_size,
                    color_background,
                    position_container,
                    text_alignment,
                    padding,
                    outline,
                    button_color
                ) }}

            </div>

        </div>
    </div>
</div>