{# 
  =============================================================================
  COMPONENT: Global Notification Alert
  STABILITY: Production-Stable / Architecture: Sinn 556 iRS Equivalent (No-Lag)
  COMPLIANCE: Section 508 / WCAG 2.2 Level AA / ARIA 1.2 "Alert" Pattern
  =============================================================================
  TECHNICAL ARCHITECTURE:
  - Atomic Design: Leverages external macros to decouple sub-element rendering.
  - Flexibility: Merges CMS-driven colors/borders with standard Bootstrap 5.3 utility.
  - UX: Dismissible logic integrated via 'alert-dismissible' and data-bs-attributes.

  MAINTENANCE WARNING:
  If 'role="alert"' is used, screen readers will interrupt current tasks to 
  announce the content. Use 'role="region"' (as implemented) for persistent 
  informational banners that shouldn't startle the user.
  =============================================================================
#}

{{ attach_library('cua_theme/alert') }}

{# Macro Imports: The 'DRY' (Don't Repeat Yourself) approach to UI logic #}
{% import '@cua_theme/component/macros/card_title.html.twig' as titleMacros %}

{% set alert_classes = [
    'block',
    'block-' ~ configuration.provider|clean_class,
    'alert alert-dismissible card rounded-0 h-100',
    color_background ?: null,
    color_border ?: null,
    container_size ?: null,
    id ? 'block--' ~ id|replace({"_": "-"})|clean_class : null,
]|merge(utility_classes ?: [])|filter(v => v)|join(' ') %}

{# 
  ACCESSIBILITY MAPPING: 
  Persistent unique IDs ensure that assistive technology can associate 
  the container's landmark label with the visual heading.
#}
{% set unique_id = 'alert-' ~ elements.content['#block_content'].id()|default(random(1000)) %}
{% set labelledby_id = unique_id ~ '--label' %}

<div {{ attributes
    .without('id')
    .setAttribute('id', unique_id)
    .addClass(alert_classes)
    .setAttribute('role', 'region')
    .setAttribute('aria-labelledby', labelledby_id)
}}>

    <div class="container">
        <div class="row"> {# Corrected <span> to <div> for block-level containment #}

            {# 
               WCAG 2.1: Close buttons must have an explicit aria-label 
               since they typically only contain an 'X' icon or CSS pseudo-element.
            #}
            <button type="button" class="btn-close" aria-label="{{ 'Close alert'|t }}" data-bs-dismiss="alert"></button>

            <div class="col p-2">

                {# 
                   ICON ARCHITECTURE: 
                   Rendered via macro to ensure consistent SVG/Icon-font 
                   scaling across all card-type components. 
                #}
                {% if icon %}
                    {% import '@cua_theme/component/macros/card_icon.html.twig' as iconMacros %}
                    <div class="d-flex justify-content-center">
                        <span class="icon-container">
                            {{ iconMacros.render_icon(icon, icon_size, icon_color, padding, position_container, text_alignment) }}
                        </span>
                    </div>
                {% endif %}

                {{ title_prefix }}
                {% if label %}
                    {# SYNCED ID: Ensuring this matches the aria-labelledby of the parent #}
                    <h3 id="{{ labelledby_id }}" class="display-4 card-text lead title {{ text_color ?: '' }}">
                        {{ label }}
                    </h3>
                {% endif %}
                {{ title_suffix }}

                {# CONTENT LAYER: Processed via body macro for text-format sanitization #}
                {% if content %}
                    {% import '@cua_theme/component/macros/card_body.html.twig' as bodyMacros %}
                    {{ bodyMacros.render_body(content, padding, text_color, text_alignment) }}
                {% endif %}

                {# FOOTER/CTA LAYER: Optional links or actions #}
                {% if links %}
                    {% import '@cua_theme/component/macros/card_footer.html.twig' as cardFooterMacros %}
                    {{ cardFooterMacros.render_card_footer(links, container_size, color_background, position_container, text_alignment, padding, outline, button_color, button_layout) }}
                {% endif %}

            </div>
        </div>
    </div>
</div>