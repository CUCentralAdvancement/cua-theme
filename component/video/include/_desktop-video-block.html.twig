{# Desktop #}
<div class="container-fluid mx-auto position-absolute d-flex {{ position_container }}">
    <div class="col-sm-5 {{ color_background }} animate__animated animate__fadeIn animate__slow animate__delay-2s d-none d-md-block p-4 mt-5 mx-5">
        {# If title or body is present, render the following HTML block #}
        {% if label or body %}
            <div class="my-3">
                {# Title #}
                {{ title_prefix }}
                {% if label is not empty %}
                    <div class="card-title {{ text_alignment }} mx-3">
                        <h3 class="{{ text_color }}">
                            {{ label }}
                        </h3></div>
                {% endif %}
                {{ title_suffix }}
                {# Body #}
                {% if body is not empty %}
                    <div class="card-body {{ text_alignment }} {{ text_color }}">
                        {{ body|raw|nl2br }}
                    </div>
                {% endif %}
            </div>
        {% endif %}
        {# If link btn is present, render the following HTML block #}
        {% if link_title is not empty %}
            <div class="card-footer {{ text_alignment }} px-3 pb-4 mb-3">
                <a href="{{ link_url }}"
                   title="{{ link_title }}"
                   aria-label="{{ link_title }}"
                   class="align-self-end card-link btn {{ outline }}btn-{{ button_color }} text-decoration-none p-2">
                    {{ link_title }}
                    {# title for SEO/508 #}
                    {{ title_prefix }}
                    {% if label is not empty %}
                        <span class="visually-hidden"> {{ label }}</span>
                    {% endif %}
                    {{ title_suffix }}
                </a>
            </div>
        {% endif %}
    </div>
</div>
