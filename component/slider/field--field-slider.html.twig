{# Carousel based on Bootstrap 5 #}

{# Loop through each item #}
{% for item in items %}

    {# Determine active class for the first item #}
    {% set active_class = loop.first ? ' active' : '' %}
    {# Add classes to the slide item #}
    <div class="carousel-item{{ active_class }}" data-bs-interval="5000">
        {# Render each item's content within the paragraph container #}
        <div{{ attributes.addClass(classes) }}>
            {{ item.content }}
        </div>
    </div>

    {# Loop through each item in the slider indicators #}
    <div class="carousel-indicators">
        {% for item in items %}
            {% set index = loop.index0 %}
            <button type="button"
                    data-bs-target="#carousel"
                    data-bs-slide-to="{{ index }}"
                    class="{{ loop.first ? 'active' }}"
                    aria-current="{{ loop.first ? 'true' : 'false' }}"
                    aria-label="Slide {{ loop.index }}"></button>
        {% endfor %}
    </div>

{% endfor %}




