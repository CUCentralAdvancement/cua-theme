{#
/**
* @file
* Theme override to display a block.
*
* Available variables:
* - plugin_id: The ID of the block implementation.
* - label: The configured label of the block if visible.
* - configuration: A list of the block's configuration values.
*   - label: The configured label for the block.
*   - label_display: The display settings for the label.
*   - provider: The module or other provider that provided this block plugin.
*   - Block plugin specific settings will also be stored here.
* - content: The content of this block.
* - attributes: array of HTML attributes populated by modules, intended to
*   be added to the main container tag of this template.
*   - id: A valid HTML ID and guaranteed unique.
* - title_attributes: Same as attributes, except applied to the main title
*   tag that appears in the template.
* - title_prefix: Additional output populated by modules, intended to be
*   displayed in front of the main title tag that appears in the template.
* - title_suffix: Additional output populated by modules, intended to be
*   displayed after the main title tag that appears in the template.
*
* @see template_preprocess_block()
*/
#}

{# attach the library #}
{{ attach_library('cua_theme/half-and-half') }}

{# block boilerplate #}
{% set container_classes = [
    'block',
    'block-' ~ configuration.provider|clean_class,
    'block-' ~ plugin_id|clean_class,
    'half-and-half',
] %}

{# add unique id number to block #}
{% set clean_id = [
    plugin_id ? 'block--' ~ plugin_id|replace({"_": "-", ":": "--"}) ~ '-' ~ elements.content['#block_content'].id()
] %}

{# combine fields to work with attributes #}
{% set style = color_background ~ ' ' ~ border_style %}

{# render block content #}
<div{{ attributes|without('id').addClass(container_classes, style).setAttribute('id', clean_id ) }}>
    {# mobile code block #}
    <div class="container d-block d-sm-none g-0">
        <div class="card">
            <div class="row g-0">
                <div class="col-12 {{ color_background ~ ' ' ~ text_alignment ~ ' ' ~ padding }}">
                    {# include image/icon #}
                    {% include '@cua_theme/component/card/card--image.html.twig' %}
                </div>
                <div class="col-12 {{ color_background ~ ' ' ~ text_alignment }}">
                    <div class="row">
                        {# title/body #}
                        {% include '@cua_theme/component/card/card--title-body.html.twig' %}
                        {# include link #}
                        {% include '@cua_theme/component/card/card--footer-btn.html.twig' %}
                    </div>
                </div>
            </div>
        </div>
    </div>
    {# desktop code block #}
    <div class="container d-none d-sm-block g-0">
        <div class="card">
            <div class="row">
                {# checking layout to see if it is 50/50 or 70/30 -- image container #}
                {% if (content.field_custom_layout[0] is not empty) and (content.field_custom_layout.value != "4") %}
                <div class="col-md-4 col-sm-12 {{ color_background ~ ' ' ~ padding ~ ' ' ~ text_alignment ~ ' ' ~ image_alignment }}">
                    {% else %}
                    <div class="col-md-6 col-sm-12 {{ color_background ~ ' ' ~ text_alignment ~ ' ' ~ padding }}">
                        {% endif %}
                        {# image/icon #}
                        {% include '@cua_theme/component/card/card--image.html.twig' %}
                    </div>
                    {# checking layout to see if it is 50/50 or 70/30 -- copy container #}
                    {% if (content.field_custom_layout[0] is not empty) and (content.field_custom_layout.value != "4") %}
                    <div class="col-md-8 col-sm-12 {{ color_background ~ ' ' ~ text_alignment }}">
                        {% else %}
                        <div class="col-md-6 col-sm-12 {{ color_background ~ ' ' ~ text_alignment }}">
                            {% endif %}
                            <div class="row">
                                {# title/body #}
                                {% include '@cua_theme/component/card/card--title-body.html.twig' %}
                                {# link #}
                                {% include '@cua_theme/component/card/card--footer-btn.html.twig' %}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div> {# ignore error > /div is closed based on logic above #}