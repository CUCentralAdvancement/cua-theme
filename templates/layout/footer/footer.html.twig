{#
/**
* @file
* 508-Compliant Accessible Footer Template.
*
* Each content section has a meaningful, unique <h2> for screen reader navigation.
* Decorative icons use aria-hidden. Picture elements no longer misuse ARIA roles.
*/
#}

<footer class="site-footer mt-auto"
        role="contentinfo"
        aria-label="{{ 'University of Colorado site footer'|t }}">

    {# -------------------- TOP SECTION -------------------- #}
    <div id="site-footer-top" class="container pt-3">

        {% if page.footer_first or page.footer_second or page.footer_third or page.footer_fourth or page.footer_fifth %}
            <div class="row g-0">

                {% if page.footer_first %}
                    <section class="col-md-4 col-sm-6 px-2"
                             aria-labelledby="footer-university-info-heading">
                        <h3 id="footer-university-info-heading"
                            class="visually-hidden">
                            {{ 'University Information'|t }}
                        </h3>
                        {{ page.footer_first }}
                    </section>
                {% endif %}

                {% if page.footer_second %}
                    <section class="col-md-3 col-sm-6 mt-2 px-2"
                             aria-labelledby="footer-campus-links-heading">
                        <h3 id="footer-campus-links-heading"
                            class="visually-hidden">
                            {{ 'Campus Links'|t }}
                        </h3>
                        {{ page.footer_second }}
                    </section>
                {% endif %}

                {% if page.footer_third %}
                    <section class="col-md-3 col-sm-6 mt-2 px-2"
                             aria-labelledby="footer-resources-heading">
                        <h3 id="footer-resources-heading"
                            class="visually-hidden">
                            {{ 'Resources for Students and Faculty'|t }}
                        </h3>
                        {{ page.footer_third }}
                    </section>
                {% endif %}

                {% if page.footer_fourth %}
                    <section class="col-md-2 col-sm-6 mt-2 px-2"
                             aria-labelledby="footer-quick-links-heading">
                        <h3 id="footer-quick-links-heading"
                            class="visually-hidden">
                            {{ 'Quick Navigation Links'|t }}
                        </h3>
                        {{ page.footer_fourth }}
                    </section>
                {% endif %}

                {% if page.footer_fifth %}
                    <section class="col-12 make-a-gift g-0 my-2"
                             aria-labelledby="footer-support-heading">
                        <h3 id="footer-support-heading" class="visually-hidden">
                            {{ 'Support the University'|t }}
                        </h3>
                        {{ page.footer_fifth }}
                    </section>
                {% endif %}

            </div>
        {% endif %}
    </div>

    {# -------------------- BOTTOM SECTION -------------------- #}
    <div id="site-footer-bottom"
         class="container-fluid bg-pure-black px-5 pb-2">
        <div class="row">

            {# Logo with proper alt text (no ARIA role misuse) #}
            <div class="col-12 mt-4 mb-3 d-flex align-items-center justify-content-center cu-logo-section">
                <picture>
                    <source media="(max-width: 499px)"
                            srcset="{{ base_path ~ directory ~ '/images/cua-logo-white.svg' }}"
                            width="250"
                            height="70"/>
                    <source media="(min-width: 500px)"
                            srcset="{{ base_path ~ directory ~ '/images/cua-logo-white.svg' }}"
                            width="500"
                            height="140"/>
                    <img src="{{ base_path ~ directory ~ '/images/cua-logo-white.svg' }}"
                         alt="{{ 'University of Colorado logo'|t }}"
                         width="500"
                         height="140"
                         loading="lazy"/>
                </picture>
            </div>

            {# Additional Information / Legal, Social Links #}
            {% if page.footer_sixth %}
                <section
                        class="col-12 d-flex align-items-center justify-content-center"
                        aria-labelledby="footer-additional-info-heading">
                    <h4 id="footer-additional-info-heading"
                        class="visually-hidden">
                        {{ 'Legal and Additional Information'|t }}
                    </h4>
                    {{ page.footer_sixth }}
                </section>
            {% endif %}

            {# Copyright #}
            <div class="col-12 border-top border-secondary d-flex align-items-center justify-content-center">
                <p class="mt-2 mb-3 strong text-light">
                    {{ 'Â©'|t }} {{ 'now' | date('Y') }}
                    <a href="https://regents.cu.edu"
                       rel="noopener"
                       target="_blank"
                       class="link-light link-underline-opacity-0 px-2"
                       aria-label="{{ 'Regents of the University of Colorado (opens in a new tab)'|t }}">
                        {{ 'Regents of the University of Colorado'|t }}
                    </a>

                    {% if not logged_in %}
                        <span class="admin-login">
							<a href="{{ path('user.login') }}"
                               rel="noopener"
                               class="link-light link-underline-opacity-0 px-2">
							<i class="px-2 fas fa-sign-in-alt" aria-hidden="true"></i>
							{{ 'Login'|t }}
							</a>
						</span>
                    {% endif %}
                </p>
            </div>

        </div>
    </div>

</footer>