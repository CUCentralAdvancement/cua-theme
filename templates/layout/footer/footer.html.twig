{# Render content #}
<footer class="site-footer mt-auto">
    {# Site Footer Top Section #}
    <div id="site-footer-top" class="container pt-3">
        {# Check if any footer regions are present #}
        {% if page.footer_first or page.footer_second or page.footer_third or page.footer_fourth or page.footer_fifth %}
            <div class="row g-0">

                {# Footer Region 1 and 5: University Information #}
                <div class="col-md-4 col-sm-6 px-2">
                    {# Footer Region 1: #}
                    {% if page.footer_first %}
                        <div class="first-col-footer g-0">
                            {{ page.footer_first }}
                        </div>
                    {% endif %}
                </div>

                {# Additional Footer Regions #}
                {# Footer Region 2: Displayed as a column on medium and a row on small screens #}
                {% if page.footer_second %}
                    <div class="col-md-3 col-sm-6 mt-2 px-2">
                        {{ page.footer_second }}
                    </div>
                {% endif %}

                {# Footer Region 3: Displayed as a column on medium and a row on small screens #}
                {% if page.footer_third %}
                    <div class="col-md-3 col-sm-6 mt-2 px-2">
                        {{ page.footer_third }}
                    </div>
                {% endif %}

                {# Footer Region 4: Displayed as a column on medium and a row on small screens #}
                {% if page.footer_fourth %}
                    <div class="col-md-2 col-sm-6 mt-2 px-2">
                        {{ page.footer_fourth }}
                    </div>
                {% endif %}

                {# Footer Region 5 #}
                {% if page.footer_fifth %}
                    <div class="make-a-gift g-0 my-2">
                        {{ page.footer_fifth }}
                    </div>
                {% endif %}

            </div>
        {% endif %}
    </div>

    {# Site Footer Bottom Section #}
    <div id="site-footer-bottom"
         class="container-fluid bg-pure-black px-5 pb-2">
        <div class="row">

            {# CU Logo #}
            <div class="col-sm-12 mt-4 mb-3 d-flex align-items-center justify-content-center cu-logo-section">
                <a href="https://www.cu.edu/"
                   target="_blank"
                   rel="noopener noreferrer"
                   class="footer-site-branding__logo">
                    <picture>
                        <source
                                media="(max-width: 499px)"
                                srcset="{{ base_path ~ directory ~ '/images/cua-logo-white.svg' }}"
                                width="250"
                                height="70"
                        />
                        <source
                                media="(min-width: 500px)"
                                srcset="{{ base_path ~ directory ~ '/images/cua-logo-white.svg' }}"
                                width="500"
                                height="140"
                        />
                        <img
                                src="{{ base_path ~ directory ~ '/images/cua-logo-white.svg' }}"
                                alt="{{ 'University of Colorado official logo'|t }}"
                                width="500"
                                height="140"
                                loading="lazy"
                        />
                    </picture>
                </a>
            </div>

            {# Footer Region 6 #}
            {% if page.footer_sixth %}
                <div class="col-sm-12 d-flex align-items-center justify-content-center">
                    {{ page.footer_sixth }}
                </div>
            {% endif %}

            {# Copyright/Regents Information #}
            <div class="copyright col-sm-12 border-top border-secondary d-flex align-items-center justify-content-center">
                <p class="mt-2 mb-3 strong text-light"
                   aria-label="{{ 'Copyright and University of Colorado Regents website'|t }}">
                    {{ 'Â©'|t }} {{ 'now' | date('Y') }}
                    <a href="https://regents.cu.edu" rel="noopener"
                       target="_blank"
                       class="link-light link-underline-opacity-0 px-2"
                       aria-label="{{ 'Visit the University of Colorado Regents website'|t }}">
                        {{ 'Regents of the University of Colorado'|t }}
                    </a>

                    {% if not logged_in %}
                        <span class="admin-login">
							<a href="{{ path('user.login') }}" rel="noopener"
                               class="link-light link-underline-opacity-0 px-2"
                               aria-label="{{ 'Login'|t }}">
							<i class="px-2 fas fa-sign-in-alt" aria-hidden="true"></i>
							{{ 'Login'|t }}
							</a>
						</span>
                    {% endif %}

                </p>
            </div>

        </div>

    </div>
</footer>
