{% set uid = 'tabs-' ~ random() %}
{% set header_id = uid ~ '-tab' %}
{% set content_id = uid ~ '-pane' %}

<div{{ attributes.addClass('tabs-wrapper') }}>
	<ul class="nav nav-tabs" id="{{ uid }}-nav" role="tablist">
		<li class="nav-item" role="presentation">
			<button class="nav-link active"
			        id="{{ header_id }}"
			        data-bs-toggle="tab"
			        data-bs-target="#{{ content_id }}"
			        type="button"
			        role="tab"
			        aria-controls="{{ content_id }}"
			        aria-selected="true">
				{% if content.field_title is defined %}
					{{ content.field_title }}
				{% else %}
					<span>No title</span>
				{% endif %}
			</button>
		</li>
	</ul>
	
	<div class="tab-content pt-3">
		<div class="tab-pane fade show active"
		     id="{{ content_id }}"
		     role="tabpanel"
		     aria-labelledby="{{ header_id }}">
			{% if content.field_body is defined %}
				{{ content.field_body }}
			{% else %}
				<p>No content.</p>
			{% endif %}
		</div>
	</div>
</div>