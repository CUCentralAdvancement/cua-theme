{# CU Banner #}

{# Attach the library #}
{{ attach_library('cua_theme/banner') }}

{# Preprocess #}
{% set color_text = (content.field_text_color.0) %}
{% set color_background = (content.field_color_background.0) %}
{% set color_button = (content.field_button_color.0) %}
{% set button_outline = (content.field_outline.0) %}
{% set center = (content.field_center_content.0) %}


{# Content #}
<div{{ attributes }}>
    <div class="jumbotron jumbotron-fluid banner shadow-lg py-4" {% if content.field_image['#items'].entity.uri.value %} style="background-image: url({{ file_url(content.field_image['#items'].entity.uri.value) }}); background-size: cover; background-position: center"{% endif %} >
        <div class="container">
            <div class="row">
                <div class="col-md-6 {{ color_background }} shadow rounded my-5 pt-5 p-4">
                    {{ title_prefix }}
                    {% if label %}
                        <h2 class="display 4 {{ center }} {{ color_text }}">{{ label }}</h2>
                    {% endif %}
                    {{ title_suffix }}
                    {% if content.body is not empty %}
                        <div class="lead {{ center }} {{ color_text }}">{{ content.body }}</div>
                    {% endif %}
                    {% if content.field_link[0]['#url'] %}
                        <div class="my-2 {{ center }}"><a href="{{ content.field_link[0]['#url'] }}" class="btn {{ button_outline }}btn-{{ color_button }}">{{ content.field_link[0]['#title'] }}</a></div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>