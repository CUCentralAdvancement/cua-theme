{#
/**
* @file
* Theme override to display a block.
*
* Available variables:
* - plugin_id: The ID of the block implementation.
* - label: The configured label of the block if visible.
* - configuration: A list of the block's configuration values.
*   - label: The configured label for the block.
*   - label_display: The display settings for the label.
*   - provider: The module or other provider that provided this block plugin.
*   - Block plugin specific settings will also be stored here.
* - content: The content of this block.
* - attributes: array of HTML attributes populated by modules, intended to
*   be added to the main container tag of this template.
*   - id: A valid HTML ID and guaranteed unique.
* - title_attributes: Same as attributes, except applied to the main title
*   tag that appears in the template.
* - title_prefix: Additional output populated by modules, intended to be
*   displayed in front of the main title tag that appears in the template.
* - title_suffix: Additional output populated by modules, intended to be
*   displayed after the main title tag that appears in the template.
*
* @see template_preprocess_block()
*/
#}
{# Attach the library #}
{{ attach_library('cua_theme/half-and-half') }}
{# Set CSS Classes #}
{% set container_classes = [
    'block',
    'block-' ~ configuration.provider|clean_class,
    'block-' ~ plugin_id|clean_class,
] %}
{# Set background color if true #}
{% set color_background = (content.field_color_background.0) %}
{% if color_background is not empty %}
    {% set background_class = color_background %}
{% endif %}
{# Content #}
<div{{ attributes.addClass('half-and-half g-0 p-0 m-0', background_class ) }}>
    <div class="container g-0">
        <div class="card {{ content.field_border_style.0 }}">
            <div class="row g-0">
                {% if (content.field_custom_layout[0] is not empty) and (content.field_custom_layout.value != "4") %}
                <div class="col-md-4 col-sm-12 {{ background_class }} {{ content.field_text_alignment.0 }} {{ content.field_image_aligment.0 }}">
                    {% else %}
                    <div class="col-md-6 col-sm-12 {{ background_class }} {{ content.field_text_alignment.0 }} {{ content.field_image_aligment.0 }}">
                        {% endif %}
                        {% set image_alt = (content.field_image.0['#item'].alt ) %}
                        {% set image_path = (content.field_image['#items'].entity.uri.value) ? (file_url(content.field_image['#items'].entity.uri.value)) : '' %}
                        {% set link_title = (content.field_link.0['#title']|render) %}
                        {% set link_url = file_url(content.field_link.0['#url']|render) %}
                        {% if content.field_link.0['#url'] is not empty %}
                            <a href="{{ content.field_link.0['#url'] }}"
                               aria-label="{{ content.field_image.0['#item'].alt }}">
                                <div role="img"
                                     class="hh-img {{ content.field_image_size.0 }} {{ content.field_padding.0 }} img-hover-effect w-100"
                                     aria-label="{{ content.field_image.0['#item'].alt }}">
                                    <img class="card-img-top img-fluid"
                                         src="{{ image_path }}" loading="lazy"
                                         alt="{{ image_alt }}">
                                </div>
                            </a>
                        {% elseif content.field_link.0['#url'] is empty %}
                            <div role="img"
                                 class="hh-img {{ content.field_image_size.0 }} {{ content.field_padding.0 }} w-100"
                                 aria-label="{{ content.field_image.0['#item'].alt }}">
                                <img class="card-img-top img-fluid"
                                     src="{{ image_path }}" loading="lazy"
                                     alt="{{ image_alt }}">
                            </div>
                        {% endif %}
                    </div>
                    {% if (content.field_custom_layout[0] is not empty) and (content.field_custom_layout.value != "4") %}
                    <div class="col-md-8 col-sm-12 {{ background_class }} {{ content.field_text_alignment.0 }}">
                        {% else %}
                        <div class="col-md-6 col-sm-12 {{ background_class }} {{ content.field_text_alignment.0 }}">
                            {% endif %}
                            <div class="card-body text-{{ background_class }} mt-md-4 mt-sm-2">
                                {{ title_prefix }}
                                {% if label %}
                                    <h3 class="{{ content.field_image_size.0 }} {{ content.field_text_alignment.0 }} mb-2 px-md-4 px-sm-1">
                                        {{ label }}
                                    </h3>
                                {% endif %}
                                {{ title_suffix }}
                                {% if content.body %}
                                    {{ content.body }}
                                {% endif %}
                                {% set link_title = (content.field_link.0['#title']|render) %}
                                {% set link_url = file_url(content.field_link.0['#url']|render) %}
                                {% if link_title %}
                                    <div class="card-footer {{ content.field_text_alignment.0 }} g-0 mt-md-5 mt-sm-1 px-md-4 px-sm-0">
                                        <a class="btn {{ content.field_outline.0 }}btn-{{ background_class }} text-decoration-none rounded p-2"
                                           title="{{ link_title }}"
                                           aria-label="{{ link_title }}"
                                           href="{{ link_url }}">{{ link_title }}</a>
                                    </div>
                                {% else %}
                                {% endif %}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>