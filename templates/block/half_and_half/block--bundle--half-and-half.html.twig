{#
/**
* @file
* Theme override to display a block.
*
* Available variables:
* - plugin_id: The ID of the block implementation.
* - label: The configured label of the block if visible.
* - configuration: A list of the block's configuration values.
*   - label: The configured label for the block.
*   - label_display: The display settings for the label.
*   - provider: The module or other provider that provided this block plugin.
*   - Block plugin specific settings will also be stored here.
* - content: The content of this block.
* - attributes: array of HTML attributes populated by modules, intended to
*   be added to the main container tag of this template.
*   - id: A valid HTML ID and guaranteed unique.
* - title_attributes: Same as attributes, except applied to the main title
*   tag that appears in the template.
* - title_prefix: Additional output populated by modules, intended to be
*   displayed in front of the main title tag that appears in the template.
* - title_suffix: Additional output populated by modules, intended to be
*   displayed after the main title tag that appears in the template.
*
* @see template_preprocess_block()
*/
#}

{# Set Preprocess Fields #}
{% set alignment = (content.field_text_alignment.0) %}
{% set background_color = (content.field_color_background.0) %}
{% set body = (content.body) %}
{% set link = (content.field_link.0) %}
{% set link_title = (content.field_link.0['#title']|render) %}
{% set link_url = file_url(content.field_link.0['#url']|render) %}
{% set image_alignment = (content.field_image_aligment.0) %}
{% set image_alt = (content.field_image.0['#item'].alt ) %}
{% set image_path = (content.field_image['#items'].entity.uri.value) ? (file_url(content.field_image['#items'].entity.uri.value)) : '' %}
{% set image_style = (content.field_image_style.0) %}
{% set image_size = (content.field_image_size.0) %}
{% set padding = (content.field_padding.0) %}

{# Set Remove Padding and Margin #}
{% if remove_padding is not empty %}
    {% set padding =  remove_padding %}
{% else %}
    {% set padding = 'my-3 mb-4' %}
{% endif %}

{# Set CSS Classes #}
{% set container_classes = [
    'd-flex',
    'clearfix',
    'block',
    'block-' ~ configuration.provider|clean_class,
    'block-' ~ plugin_id|clean_class,
    'half-and-half'
] %}


{# Attach the library #}
{{ attach_library('cua_theme/half_and_half') }}

{# Content #}
<div{{ attributes.addClass(container_classes) }}>
    <div class="container-fluid card {{ background_color }}">
        <div class="row">
            <div class="col {{ image_size }} {{ image_alignment }} g-0">
                {% if link_url is not empty %}
                    <a href="{{ link_url }}">
                        <div role="img" class="hh-img" aria-label="{{ image_alt }}">
                            <img class="card-img-top img-fluid"
                                 src="{{ image_path }}" loading="eager"
                                 alt="{{ image_alt }}">
                        </div>
                    </a>
                {% else%}
                    <div role="img" class="hh-img" aria-label="{{ image_alt }}">
                        <img class="card-img-top img-fluid"
                             src="{{ image_path }}" loading="eager"
                             alt="{{ image_alt }}">
                    </div>
                {% endif %}
            </div>
            <div class="col text-{{ background_color }} {{ alignment }} p-5">
                <div class="{{ background_color }} w-75">
                    {{ title_prefix }}
                    {% if label %}
                        <h3 class="{{ alignment }}">{{ label }}</h3>
                    {% endif %}
                    {{ title_suffix }}
                    {% if body %}
                        {{ body }}
                    {% else %}
                    {% endif %}
                    {% if link_title %}
                        <div class="card-footer {{ alignment }}">
                            <a class="btn {{ content.field_outline.0 }}btn-{{ background_color }} text-decoration-none rounded p-2"
                               title="{{ link_title }}"
                               aria-label="{{ link_title }}"
                               href="{{ link_url }}">{{ link_title }}</a>
                        </div>
                    {% else %}
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>