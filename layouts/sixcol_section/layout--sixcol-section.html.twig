{#
/**
 * @file
 * Theme implementation for a 6-column layout.
 *
 * Available variables:
 * - content: The content for this layout.
 * - attributes: HTML attributes for the layout <div>.
 *
 * @ingroup themeable
 */
#}
{#
/**
 * @file
 * Theme implementation for a 6-column layout.
 */
#}
{% if content %}
    <div{{ attributes.addClass('row', 'justify-content-center') }}>

        {% if content.top %}
            <div{{ region_attributes.top.addClass('region--top', 'w-100') }}>
                {{ content.top }}
            </div>
        {% endif %}

        <div{{ region_attributes.first.addClass('col-12', 'col-md-2', 'mx-auto') }}>
            {{ content.first }}
        </div>

        <div{{ region_attributes.second.addClass('col-12', 'col-md-2', 'mx-auto') }}>
            {{ content.second }}
        </div>

        <div{{ region_attributes.third.addClass('col-12', 'col-md-2', 'mx-auto') }}>
            {{ content.third }}
        </div>

        <div{{ region_attributes.fourth.addClass('col-12', 'col-md-2', 'mx-auto') }}>
            {{ content.fourth }}
        </div>

        <div{{ region_attributes.fifth.addClass('col-12', 'col-md-2', 'mx-auto') }}>
            {{ content.fifth }}
        </div>

        <div{{ region_attributes.sixth.addClass('col-12', 'col-md-2', 'mx-auto') }}>
            {{ content.sixth }}
        </div>

        {% if content.bottom %}
            <div{{ region_attributes.bottom.addClass('region--bottom', 'w-100') }}>
                {{ content.bottom }}
            </div>
        {% endif %}

    </div>
{% endif %}