{#
/**
 * @file
 * Default theme implementation for a seven-column media layout.
 *
 * Available variables:
 * - content: The content for this layout.
 * - attributes: HTML attributes for the layout <div>.
 *
 * @ingroup themeable
 */
#}
{% if content %}
    <div{{ attributes.addClass('row justify-content-center mx-auto') }}>

        {% if content.top %}
            <div {{ region_attributes.top.addClass('region--top w-100') }}>
                {{ content.top }}
            </div>
        {% endif %}

        <div{{ region_attributes.first.addClass('col-md-1 col-12 mx-auto') }}>
            {{ content.first }}
        </div>

        <div{{ region_attributes.second.addClass('col-md-2 col-12 mx-auto') }}>
            {{ content.second }}
        </div>

        <div{{ region_attributes.third.addClass('col-md-2 col-12 mx-auto') }}>
            {{ content.third }}
        </div>

        <div{{ region_attributes.fourth.addClass('col-md-2 col-12 mx-auto') }}>
            {{ content.fourth }}
        </div>

        <div{{ region_attributes.fifth.addClass('col-md-2 col-12 mx-auto') }}>
            {{ content.fifth }}
        </div>

        <div{{ region_attributes.sixth.addClass('col-md-2 col-12 mx-auto') }}>
            {{ content.sixth }}
        </div>

        <div{{ region_attributes.seventh.addClass('col-md-1 col-12 mx-auto') }}>
            {{ content.seventh }}
        </div>

        {% if content.bottom %}
            <div {{ region_attributes.bottom.addClass('region--bottom w-100') }}>
                {{ content.bottom }}
            </div>
        {% endif %}

    </div>
{% endif %}