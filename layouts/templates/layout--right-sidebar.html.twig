{#
/**
 * @file
 * Default theme implementation for a media layout.
 *
 * Available variables:
 * - content: The content for this layout.
 * - attributes: HTML attributes for the layout <div>.
 *
 * @ingroup themeable
 */
#}
{% if content %}
    <div{{ attributes.addClass('row cua-sidebar-layout cua-right-sidebar') }}>

        <div class="cua-container">

            {% if content.top %}
                <div {{ region_attributes.top.addClass('region--top cua-sidebar-layout-top') }}>
                    {{ content.top }}
                </div>
            {% endif %}

            <div class="cua-sidebar-layout-middle">

                <div{{ region_attributes.first.addClass('col-sm-9 cua-sidebar-column-left') }}>
                    {{ content.first }}
                </div>

                <div{{ region_attributes.second.addClass('col-sm-3 cua-sidebar-column-right') }}>
                    {{ content.second }}
                </div>

            </div>

            {% if content.bottom %}
                <div {{ region_attributes.bottom.addClass('region--bottom cua-sidebar-layout-bottom') }}>
                    {{ content.bottom }}
                </div>
            {% endif %}

        </div>

    </div>
{% endif %}